package mysql;

import java.util.ArrayList;
import java.util.HashMap;

public class JsonArrayCreater {
	private static final String TAG_SRC = "src";
	private static final String TAG_ALT = "alt";
	/*
	 * Convert JSON String to ArrayList<HashMap<String, String>>
	 */
	ArrayList<HashMap<String, String>> igagsListTemp;
	JSONArray jsonArray;
	protected ArrayList<HashMap<String, String>> getGagListFromString(String myJsonString) {
		igagsListTemp = new ArrayList<HashMap<String, String>>();
		try {
			jsonArray = new JSONArray(myJsonString);
			for (int i = 0; i < jsonArray.length(); i++) {
				JSONObject jsonObject = jsonArray.getJSONObject(i);
				src = jsonObject.getString(TAG_SRC);
				alt = jsonObject.getString(TAG_ALT);

				System.out.println(src + "\n" + alt + "\n");

				iMap = new HashMap<String, String>(); // adding HashList to
														// ArrayList
				iMap.put(Constants.TAG_SRC, src);
				iMap.put(Constants.TAG_ALT, alt);
				igagsListTemp.add(iMap);
			}
		} catch (NumberFormatException ne) {
			ne.printStackTrace();
		} catch (Exception e) {
			e.printStackTrace();
		}

		return igagsListTemp;
	}
}
