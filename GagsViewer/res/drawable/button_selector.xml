<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/background_action_bar_light" />

            <corners android:radius="@dimen/drawableButtonSelectorCorners" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_pressed="false">
        <shape>
            <gradient android:angle="90" android:endColor="@color/disabled_button_background_color" android:startColor="@color/disabled_button_background_color" />

            <corners android:radius="@dimen/drawableButtonSelectorCorners" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="90" android:endColor="@color/background_action_bar" android:startColor="@color/background_action_bar" />

            <corners android:radius="@dimen/drawableButtonSelectorCorners" />
        </shape>
    </item>

</selector>