<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/drawableButtonSelectorSolidColor" />
            <corners android:radius="@dimen/drawableButtonSelectorCorners" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="90" android:endColor="@color/drawableButtonSelectorGradientColor" android:startColor="@color/drawableButtonSelectorGradientColor" />

            <corners android:radius="@dimen/drawableButtonSelectorCorners" />
        </shape>
    </item>

</selector>